<%- include("../../components/header.ejs") %>

    <div class="container mt-3">

        <div class="d-flex align-items-center justify-content-between">

            <h4>News</h4>

            <a class="btn btn-primary" href="/add-news">Add New News</a>

        </div>

        <% if (successMessage.length> 0) { %>

            <div class="mt-3 mb-3 d-flex align-items-center justify-content-center" style="color: rgb(27, 181, 27);">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-check2-circle" viewBox="0 0 16 16">

                    <path
                        d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0" />

                    <path
                        d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />

                </svg>

                <div class="ms-2">

                    <%= successMessage %>

                </div>

            </div>

            <% } %>

                <table class="table table-bordered mt-2">

                    <thead>

                        <th>#</th>

                        <th>Category</th>

                        <th>Title</th>

                        <th>Image</th>

                        <th>Image1</th>

                        <th>Action</th>

                    </thead>

                    <tbody>

                        <% newsData.forEach((element,index)=> {%>

                            <tr>

                                <td>
                                    <%= index+1 %>
                                </td>

                                <td>
                                    <%= element.categoriesTitle %>
                                </td>

                                <td>
                                    <%= element.newsTitle %>
                                </td>

                                <td>
                                    <img style="height: 50px;" src="<%= element.newsSecureUrl %>" alt="image">
                                </td>

                                <td>
                                    <img style="height: 50px;" src="<%= element.newsSecureUrl1 %>" alt="image1">
                                </td>

                                <td>
                                    <a href="/news/details/<%= element.newsId %>">Details</a>

                                    <a href="/news/edit/<%= element.newsId  %>">Edit</a>

                                    <a href="/news/delete/<%= element.newsId  %>">Delete</a>
                                </td>

                            </tr>

                            <% }) %>

                    </tbody>

                </table>

    </div>

    <%- include("../../components/footer.ejs") %>