<%- include('../../components/header.ejs') %>
  <div class="container mt-3">
    <h3>Add Blog</h3>
    <div class="row">
      <div class="col-md-4"></div>
      <form action="/blog-insert" method="POST" enctype="multipart/form-data">
        <input class="form-control mt-3" type="text" name="title" placeholder="Enter title">
        <textarea class="form-control mt-2" name="description" id="" placeholder="Enter description"></textarea>
        <input class="form-control mt-2" type="file" name="blogImage">
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    

        <% if(errorMessage.length> 0) {%>
          <div style="color: rgb(209, 8, 8);" class="d-flex align-items-center justify-content-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
              <path
                d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
            </svg>
            <div class="ms-2">
              <%= errorMessage %>
            </div>
          </div>
          <% } %>

            <% if(successMessage.length> 0){%>
              <div class="d-flex justify-content-center align-items-center" style="color: rgb(27, 181, 27);">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                  class="bi bi-check2-circle" viewBox="0 0 16 16">
                  <path
                    d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0" />
                  <path
                    d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
                </svg>
                <div>
                  <%= successMessage %>
                </div>
              </div>
              <%} %>
      </form>
      <div class="col-md-8"></div>
    </div>
  </div>

 