<%- include('../../components/header.ejs') %>
    <div class="container">
        
        <div class="d-flex justify-content-between align-items-center">

            <h3 class="mt-3">BLOG</h3>
            <a class="btn btn-primary" href="/add-blog">Add 
                    Blog</a>
        </div>

   

    <table class="table table-bordered mt-3">
        <thead>
            <th>#</th>
            <th>Title</th>
            <th>Image</th>
            <th>Description</th>
            <th>Action</th>
        <tbody>
            <tr>
                <% data.forEach((element,index)=> {%>
                    <td>
                        <%= index+1 %>
                    </td>
                    <td>
                        <%= element.title %>
                    </td>
                    <td><img src="" alt=""></td>
                    <td>
                        <%=element.description %>
                    </td>
                    <td>
                        <a href="/blog/details/<%= element.id %>">details</a>
                        <a href="/blog/edit/<%= element.id %>">edit</a>
                        <a href="/blog/delete/<%= element.id %>">delete</a>
                    </td>
                    <%}) %>

            </tr>
        </tbody>
        </thead>
    </table>
     </div>
    </body>

    </html>